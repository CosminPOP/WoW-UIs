	<!-- General Options Panel -->
	<Frame name="ArenaUnitFramesInterfaceGeneralPanel" hidden="true">
		<Layers>
			<Layer level="OVERLAY">
				<FontString name="$parentTitle" inherits="GameFontNormalLarge" text="ARENA_UNIT_FRAMES_CONFIG_LABEL">
					<Anchors>
						<Anchor point="TOPLEFT">
							<Offset>
								<AbsDimension x="15" y="-15" />
							</Offset>
						</Anchor>
					</Anchors>
				</FontString>
			</Layer>
		</Layers>
		<Frames>
			<Slider name="ArenaUnitFramesOptionsScaleSlider" inherits="OptionsSliderTemplate">
				<Anchors>
					<Anchor point="TOPRIGHT">
						<Offset>
							<AbsDimension x="-50" y="-55" />
						</Offset>
					</Anchor>
				</Anchors>
				<Scripts>
					<OnShow>
						self:Enable();
						self:SetMinMaxValues(.5, 1);
						self:SetValueStep(.05);
						self:SetValue(ArenaUnitFrames_Config["options"]["scale"]);
						getglobal(self:GetName().."Text"):SetText(ARENA_UNIT_FRAMES_SCALE);
						getglobal(self:GetName().."Low"):SetText("50%");
						getglobal(self:GetName().."High"):SetText("100%");
					</OnShow>
					<OnEnter>
						if (self.tooltipText) then
							GameTooltip:SetOwner(self, "ANCHOR_LEFT");
							GameTooltip:SetBackdropColor(TOOLTIP_DEFAULT_BACKGROUND_COLOR.r, TOOLTIP_DEFAULT_BACKGROUND_COLOR.g, TOOLTIP_DEFAULT_BACKGROUND_COLOR.b);
							GameTooltip:SetText(self.tooltipText, 1.0, 1.0, 1.0);
						end
					</OnEnter>
					<OnValueChanged>
						PlaySound("igMainMenuOptionCheckBoxOn");	
						ArenaUnitFrames_Config["options"]["scale"] = self:GetValue();
						ArenaUnitMasterFrame:SetScale(ArenaUnitFrames_Config["options"]["scale"]);
					</OnValueChanged>
					<OnLeave>
						GameTooltip:Hide();
					</OnLeave>
				</Scripts>
			</Slider>
