	<Frame name="MazzifierAS_ButtonDropDownTemplate" inherits="UIDropDownMenuTemplate" enableMouse="true" virtual="true">
		<Layers>
			<Layer level="ARTWORK">
				<FontString name="$parentLabel" inherits="GameFontNormalSmall" text="">
					<Anchors>
						<Anchor point="LEFT" relativePoint="RIGHT">
    						<Offset>
    							<AbsDimension x="-8" y="1"/>
    						</Offset>
    					</Anchor>
					</Anchors>
				</FontString>
			</Layer>
		</Layers>
		<Scripts>
			<OnEnter>
				if ( this.tooltipText ) then
					GameTooltip:SetOwner(this, "ANCHOR_RIGHT");
					GameTooltip:SetText(this.tooltipText, nil, nil, nil, nil, 1);
					GameTooltip:Show();
				end
			</OnEnter>
			<OnLeave>
				GameTooltip:Hide();
			</OnLeave>
		</Scripts>
	</Frame>

	<Button name="MazzifierAS_ButtonTemplate" inherits="UIPanelButtonTemplate" virtual="true" text="">
		<Size>
			<AbsDimension x="150" y="22"/>
		</Size>
		<Layers>
			<Layer level="ARTWORK">
				<FontString name="$parentLabel" inherits="GameFontNormalSmall" text="">
					<Anchors>
						<Anchor point="LEFT" relativePoint="RIGHT">
    						<Offset>
    							<AbsDimension x="8" y="0"/>
    						</Offset>
    					</Anchor>
					</Anchors>
				</FontString>
			</Layer>
		</Layers>
		<Scripts>
			<OnClick>
				Mazzifier_Button_SetValue(this:GetID());
				MazzleUI:MouseClickEffect();
			</OnClick>
		</Scripts>
	</Button>

	<CheckButton name="MazzifierAS_CheckButtonTemplate" inherits="OptionsCheckButtonTemplate" virtual="true">
		<Size>
			<AbsDimension x="26" y="26"/>
		</Size>
		<Scripts>
			<OnClick>
				if ( this:GetChecked() ) then
					PlaySound("igMainMenuOptionCheckBoxOn");
    				Mazzifier_CheckButton_SetValue(this:GetID(), true)
				else
					PlaySound("igMainMenuOptionCheckBoxOff");
    				Mazzifier_CheckButton_SetValue(this:GetID(), false)
				end
				MazzleUI:MouseClickEffect();
			</OnClick>
			<OnEnter>
				if ( this.tooltipText ) then
					GameTooltip:SetOwner(this, "ANCHOR_RIGHT");
					GameTooltip:SetText(this.tooltipText, nil, nil, nil, nil, 1);
					GameTooltip:Show();
				end
			</OnEnter>
			<OnLeave>
				GameTooltip:Hide();
			</OnLeave>
		</Scripts>
	</CheckButton>

	<Frame name="MazzifierAS_YesNoTemplate" inherits="OptionFrameBoxTemplate" virtual="true">
		<Size>
			<AbsDimension x="500" y="60"/>
		</Size>
		<Anchors>
			<Anchor point="TOPLEFT" relativePoint="TOPLEFT"/>
			<Anchor point="TOPRIGHT" relativePoint="TOPRIGHT"/>
		</Anchors>
		<Frames>
			<CheckButton name="$parent_CheckButtonYes" inherits="Mazzifier_CheckButtonTemplate">
				<Anchors>
					<Anchor point="TOPLEFT">
						<Offset>
							<AbsDimension x="10" y="-8"/>
						</Offset>
					</Anchor>
				</Anchors>
            	<Scripts>
        			<OnClick>
    					PlaySound("igMainMenuOptionCheckBoxOn");
    					getglobal(this:GetParent():GetName().."_CheckButtonNo"):SetChecked(0)
    					this:SetChecked(1)
        				Mazzifier_CheckButton_SetValue(this:GetParent():GetID(), true)
        				MazzleUI:MouseClickEffect();
        			</OnClick>
                </Scripts>
			</CheckButton>
			<CheckButton name="$parent_CheckButtonNo" inherits="Mazzifier_CheckButtonTemplate">
				<Anchors>
					<Anchor point="TOPLEFT" relativeTo="$parent_CheckButtonYes" relativePoint="BOTTOMLEFT">
						<Offset>
							<AbsDimension x="0" y="4"/>
						</Offset>
					</Anchor>
				</Anchors>
            	<Scripts>
        			<OnClick>
    					PlaySound("igMainMenuOptionCheckBoxOn");
    					getglobal(this:GetParent():GetName().."_CheckButtonYes"):SetChecked(0)
    					this:SetChecked(1)
        				Mazzifier_CheckButton_SetValue(this:GetParent():GetID(), false)
        				MazzleUI:MouseClickEffect();
        			</OnClick>
                </Scripts>
			</CheckButton>
        </Frames>
		<Scripts>
			<OnLoad>
				this:SetBackdropBorderColor(0.4, 0.4, 0.4);
				this:SetBackdropColor(0.05, 0.05, 0.05);
				getglobal(this:GetName().."_CheckButtonYesText"):SetText("Yes");
				getglobal(this:GetName().."_CheckButtonNoText"):SetText("No");
			</OnLoad>
		</Scripts>
    </Frame>

	<Slider name="MazzifierAS_SliderTemplate" orientation="HORIZONTAL" virtual="true" enableMouse="true">
		<Size>
			<AbsDimension x="128" y="17"/>
		</Size>
		<HitRectInsets>
			<AbsInset left="0" right="0" top="-10" bottom="-10"/>
		</HitRectInsets>
		<Backdrop bgFile="Interface\Buttons\UI-SliderBar-Background" edgeFile="Interface\Buttons\UI-SliderBar-Border" tile="true">
			<EdgeSize>
				<AbsValue val="8"/>
			</EdgeSize>
			<TileSize>
				<AbsValue val="8"/>
			</TileSize>
			<BackgroundInsets>
				<AbsInset left="3" right="3" top="6" bottom="6"/>
			</BackgroundInsets>
		</Backdrop>
		<Layers>
			<Layer level="ARTWORK">
				<FontString name="$parentText" inherits="GameFontNormalSmall">
					<Anchors>
						<Anchor point="LEFT" relativePoint="RIGHT">
    						<Offset>
    							<AbsDimension x="10" y="-1"/>
    						</Offset>
    					</Anchor>
					</Anchors>
				</FontString>
				<FontString name="$parentLow" inherits="GameFontHighlightSmall" text="LOW">
					<Anchors>
						<Anchor point="TOPLEFT" relativePoint="BOTTOMLEFT">
							<Offset>
								<AbsDimension x="2" y="3"/>
							</Offset>
						</Anchor>
					</Anchors>
				</FontString>
				<FontString name="$parentHigh" inherits="GameFontHighlightSmall" text="HIGH">
					<Anchors>
						<Anchor point="TOPRIGHT" relativePoint="BOTTOMRIGHT">
							<Offset>
								<AbsDimension x="-2" y="3"/>
							</Offset>
						</Anchor>
					</Anchors>
				</FontString>
			</Layer>
		</Layers>
		<Scripts>
		    <OnEnter>
		    </OnEnter>
		    <OnLeave>
		    </OnLeave>
		    <OnEnter>
				GameTooltip:SetOwner(this, "ANCHOR_CURSOR");
				GameTooltip:SetText(Mazzifier_Slider_Format(this:GetID(), this:GetValue()), nil, nil, nil, nil, 1);
				GameTooltip:Show();
		    </OnEnter>
		    <OnLeave>
				GameTooltip:Hide();
		    </OnLeave>
			<OnMouseUp>
				GameTooltip:Hide();
			    Mazzifier_SliderSet(this:GetID(), this:GetValue())
			</OnMouseUp>
			<OnValueChanged>
				GameTooltip:SetText(Mazzifier_Slider_Format(this:GetID(), this:GetValue()), nil, nil, nil, nil, 1);
			</OnValueChanged>
		</Scripts>
		<ThumbTexture name="$parentThumb" file="Interface\Buttons\UI-SliderBar-Button-Horizontal">
			<Size>
				<AbsDimension x="32" y="32"/>
			</Size>
    		<Layers>
    			<Layer level="ARTWORK">
    				<FontString name="$parentThumbText" inherits="GameFontNormalSmall">
    					<Anchors>
    						<Anchor point="TOP" relativePoint="BOTTOM">
        						<Offset>
        							<AbsDimension x="10" y="-1"/>
        						</Offset>
        					</Anchor>
    					</Anchors>
    				</FontString>
    			</Layer>
    		</Layers>
		</ThumbTexture>
	</Slider>

